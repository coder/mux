{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false,
    "sourceMap": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/dist", "**/build", "**/.git"],
    "excludeFiles": ["**/*.d.ts.map"]
  },
  "include": [
    "src/cli/**/*",
    "src/desktop/**/*",
    "src/node/**/*",
    "src/common/**/*"
  ],
  "exclude": ["src/browser/**/*", "src/main.tsx", "src/terminal-window.tsx"]
}
