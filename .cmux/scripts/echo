#!/usr/bin/env bash
# Description: Echo arguments demo. Accepts any number of arguments (strings) which will be echoed back.
set -euo pipefail

# Check if arguments were provided
if [ $# -eq 0 ]; then
  cat <<'EOF'
## âš ï¸ No Arguments Provided

Usage: `/s echo <message...>`

Example: `/s echo hello world`
EOF
  exit 0
fi

# Structured output to stdout (sent to agent)
cat <<EOF
## ðŸ”Š Echo Script

**You said:** $@

**Arguments received:**
- Count: $# arguments
- First arg: ${1:-none}
- Second arg: ${2:-none}
- All args: $@

**Individual arguments:**
EOF

# Loop through each argument
for i in $(seq 1 $#); do
  echo "- Arg $i: ${!i}"
done
